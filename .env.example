# SignalBot Configuration
# Copy this file to .env and fill in your values

# Bot Mode
BOT_MODE=SIGNAL_ONLY  # LIVE, PAPER, SIGNAL_ONLY, BACKTEST

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=-1001234567890
TELEGRAM_ADMIN_IDS=123456789,987654321

# Database
DATABASE_URL=sqlite+aiosqlite:///data/signalbot.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/signalbot

# Trading APIs
# 1inch API
ONEINCH_API_KEY=your_1inch_api_key

# Alchemy (for on-chain data)
ALCHEMY_API_KEY=your_alchemy_api_key

# Exchange APIs
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# AI APIs
# HuggingFace
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Gemini (5 keys for fallback)
GEMINI_API_KEY_1=your_gemini_api_key_1
GEMINI_API_KEY_2=your_gemini_api_key_2
GEMINI_API_KEY_3=your_gemini_api_key_3
GEMINI_API_KEY_4=your_gemini_api_key_4
GEMINI_API_KEY_5=your_gemini_api_key_5

# Claude
CLAUDE_API_KEY=your_claude_api_key

# News & Social APIs
NEWSAPI_KEY=your_newsapi_key
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Market Data
COINGECKO_API_KEY=your_coingecko_api_key  # Optional for free tier

# Risk Management
MAX_POSITION_SIZE=0.1  # 10% of account
MAX_DAILY_LOSS=3.0     # 3% daily loss limit
DEFAULT_RISK_PERCENT=0.5  # 0.5% risk per trade

# Performance
ENABLE_CACHE=true
CACHE_TTL=300  # 5 minutes
RATE_LIMIT_BUFFER=0.8  # Use 80% of rate limit

# Monitoring
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
SENTRY_DSN=your_sentry_dsn  # Optional

# Security
ENCRYPT_API_KEYS=true
API_KEY_ENCRYPTION_KEY=your_32_char_encryption_key_here
ENABLE_2FA=false

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_DIR=logs
MAX_LOG_SIZE=52428800  # 50MB
LOG_BACKUP_COUNT=10

# Development
DEBUG=false
TESTING=false
HOT_RELOAD=false

# Webhooks (optional)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Time Zone
TIMEZONE=Asia/Tashkent
